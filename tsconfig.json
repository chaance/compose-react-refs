{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "scripthost",
      "es5",
      "es2015.collection"
    ],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "outDir": "./dist",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": [
    "__tests__"
  ]
}
